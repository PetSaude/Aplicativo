<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/login_launcher">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="LOGIN"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="#fff"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/login"
                android:layout_below="@+id/textView_login"
                android:layout_alignParentLeft="true"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/cursor"
                android:textIsSelectable="false"
                android:layout_marginBottom="10dp"
                android:background="#f7f1f1"
                android:gravity="fill_vertical|center_horizontal"
                android:hint="UsuÃ¡rio ou Email"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:autoText="false"
                android:textAlignment="center"
                android:enabled="true"
                android:focusable="true"
                android:typeface="sans"
                android:inputType="textEmailAddress|textPersonName" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/senha"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/textView_senha"
                android:layout_alignParentLeft="true"
                android:autoText="false"
                android:textCursorDrawable="@drawable/cursor"
                android:textColor="#000"
                android:gravity="fill_vertical|center_horizontal"
                android:hint="Senha"
                android:background="#f7f1f1"
                android:password="true"
                android:textAlignment="center"
                android:typeface="sans" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrar"
                    android:id="@+id/entrar"
                    android:backgroundTint="#d6f13d37"
                    android:textColor="#fff"
                    android:typeface="sans"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrar-se"
                    android:id="@+id/registrar"
                    android:backgroundTint="#f7f1f1"
                    android:textColor="#d6f13d37"
                    android:typeface="sans" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
